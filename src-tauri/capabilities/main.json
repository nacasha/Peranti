{
  "identifier": "migrated",
  "description": "permissions that were migrated from v1",
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",

    "event:default",

    "dialog:allow-save",
    "dialog:allow-open",

    "window:default",
    "window:allow-toggle-maximize",
    "window:allow-minimize",
    "window:allow-close",
    "window:allow-start-dragging",

    "app:default",

    "resources:default",

    "menu:default",

    "tray:default",

    "shell:allow-open",

    "clipboard-manager:allow-write",

    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }]
    },
    "fs:default",
    "fs:allow-exists",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:write-all",
    "fs:write-files",

    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-extension",
          "cmd": "node",
          "args": ["extensions-runner/runner.js", { "validator": "\\S+" }]
        }
      ]
    }
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows",
    "android",
    "iOS"
  ]
}
