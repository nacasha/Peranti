{
  "productName": "Peranti",
  "version": "0.0.1",
  "identifier": "Peranti",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "extensions-runner/runner.js",
      "extensions-runner/node_modules/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Peranti",
        "width": 900,
        "minWidth": 600,
        "height": 600,
        "minHeight": 390,
        "decorations": false,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
